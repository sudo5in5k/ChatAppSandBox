<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.chatappsandbox.ui.userdetail.ChatDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.isLoading().booleanValue() ? View.VISIBLE : View.INVISIBLE}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/char_detail_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?attr/actionBarSize"
            android:paddingBottom="?attr/actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/cardview_dark_background"
            tools:listitem="@layout/chat_detail_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/message"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="0.8"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/send"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="0.2"
                android:padding="8dp"
                android:clickable="@{viewModel.sendClickable.booleanValue()}"
                android:onClick="@{() -> viewModel.onSendClick()}"
                app:srcCompat="@drawable/ic_send_gray_24dp" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>